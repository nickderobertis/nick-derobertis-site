{
    "family": "{{ app_name }}-task-description",
    "networkMode": "awsvpc",
    "containerDefinitions": [
        {
            "name": "{{ app_name }}-main-app",
            "image": "{{ app_name }}:latest",
            "portMappings": [
                {
                    "containerPort": 80,
                    "hostPort": 80,
                    "protocol": "tcp"
                }
            ],
            "essential": true,
            "entryPoint": [
                "sh",
		"-c"
            ],
            "command": [
                "/bin/sh -c pipenv run python nick_derobertis_site/home.py"
            ]
        }
    ],
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "executionRoleArn": "arn:aws:iam::{{ aws_account_id }}:role/{{ app_name }}-execution-role",
    "cpu": "256",
    "memory": "512"
}